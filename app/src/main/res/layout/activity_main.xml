<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.myappsql.MainActivity">

   <EditText
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:id="@+id/ed"
       android:layout_marginTop="53dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentRight="true"
       android:layout_alignParentEnd="true"
       android:layout_marginRight="105dp"
       android:layout_marginEnd="105dp" />
   <TextView
       android:layout_width="150dp"
       android:layout_height="20dp"
       android:text="@string/name"
       android:textSize="15dp"
       android:id="@+id/textView"
       android:layout_above="@+id/ed2"
       android:layout_alignRight="@+id/ed"
       android:layout_alignEnd="@+id/ed"
       android:layout_marginRight="44dp"
       android:layout_marginEnd="44dp" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/ed2"
        android:layout_below="@+id/ed"
        android:layout_alignLeft="@+id/ed"
        android:layout_alignStart="@+id/ed" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="@string/place"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/ed2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/ed2"
        android:layout_alignStart="@+id/ed2"
        android:id="@+id/ed3"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="@string/age"
        android:layout_above="@+id/butt"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/butt"
        android:text="@string/save"
        android:layout_below="@+id/ed3"
        android:layout_alignRight="@+id/ed"
        android:layout_alignEnd="@+id/ed"
        android:layout_marginTop="89dp" />



</RelativeLayout>
